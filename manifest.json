{
    "manifest_version": 2,
    "name": "Essential Buttons Toolbar and Homepage",
    "version": "1.9.3.1",
    "permissions": [
        "*://*/*",
        "activeTab",
        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "clipboardWrite"
    ],
    "description": "Inserts a toolbar with essential buttons: Homepage, Duplicate Tab, New tab, Close tab and more.",
    "icons": {
        "48": "icons/home.svg"
    },
    "browser_action": {},
    "options_ui": {
        "page": "pages/settings.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": ["scripts/topSitePrompt.js"],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "defmikekoh-mymodified-essential-buttons-toolbar-extension@example.com"
        }
    }
}
