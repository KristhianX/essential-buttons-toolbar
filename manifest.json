{
  "manifest_version": 2,
  "name": "Essential Buttons Toolbar",
  "version": "1.5",
  "permissions": [
    "activeTab", 
    "tabs", 
    "storage"
  ],
  "description": "Adds a toolbar with essential buttons: Homepage, Duplicate Tab, New tab, Close tab and more.",
  "icons": {
    "48": "icons/home.svg"
  },
  "browser_action": {},
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{df2262aa-a56b-416a-aff0-3a13644a578b}"
    }
  }
}
