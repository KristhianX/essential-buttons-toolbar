{
  "manifest_version": 2,
  "name": "A real home button",
  "version": "1.0",
  
  "permissions": [
    "activeTab", 
    "tabs", 
    "storage"
  ],
  
  "description": "Adds homepage, new tab and close tab buttons to android Firefox.",
  
  "browser_specific_settings": {
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  },  

  "icons": {
    "48": "icons/home.svg"
  },
  
  "browser_action": {
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
