{
  "manifest_version": 2,
  "name": "A real home button",
  "version": "1.0.4",
  "permissions": [
    "activeTab", 
    "tabs", 
    "storage"
  ],
  "description": "Adds homepage, new tab and close tab buttons to android Firefox.",
  "icons": {
    "48": "icons/home.svg"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{df2262aa-a56b-416a-aff0-3a13644a578b}"
    }
  }
}